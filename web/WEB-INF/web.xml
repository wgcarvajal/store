<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <context-param>
        <param-name>primefaces.THEME</param-name>
        <param-value>redmond</param-value>
    </context-param>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            0
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.xhtml</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>ProductImageServlet</servlet-name>
        <servlet-class>com.store.servlets.ProductImageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductImageServlet</servlet-name>
        <url-pattern>/image</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>PDFServlet</servlet-name>
        <servlet-class>com.store.servlets.PDFServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PDFServlet</servlet-name>
        <url-pattern>/pdf</url-pattern>
    </servlet-mapping>
    <security-constraint>
        <display-name>administrator</display-name>
        <web-resource-collection>
            <web-resource-name>admin</web-resource-name>
            <description/>
            <url-pattern>/admin/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>superAdministrator</display-name>
        <web-resource-collection>
            <web-resource-name>super</web-resource-name>
            <description/>
            <url-pattern>/sAdmin/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>sAdmin</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>owner</display-name>
        <web-resource-collection>
            <web-resource-name>owner</web-resource-name>
            <description/>
            <url-pattern>/owner/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>owner</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>storeJDBCRealm</realm-name>
        <form-login-config>
            <form-login-page>/index.xhtml</form-login-page>
            <form-error-page>/index.xhtml</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <description/>
        <role-name>admin</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>sAdmin</role-name>
    </security-role>
    <security-role>
        <description>owner of products</description>
        <role-name>owner</role-name>
    </security-role>
</web-app>
